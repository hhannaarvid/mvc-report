{% extends "project/base2.html.twig" %}

{% block title %}Home{% endblock %}


{% block body %}
<h1 class="article-h1">Black Jack</h1>

    <div class="article-game">

        
            <div class="gamedraw">
                {# new #}
                <div class="bank">
                    <div class="gameinfo">
                        <p>Bankens kort:</p><br>
                        <p>Bankens totala poäng: {{bankpoints}}</p>
                    </div>
                    <div class="cards">
                        {% for card in bankhand %}
